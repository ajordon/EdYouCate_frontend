<div class="assignment-row">
  <td>{{title}}</td>
  <td>{{description}}</td>
  <td>{{comments}}</td>
  <td>{{grade}}</td>
  <td>{{due_date}}</td>
  <td><button type="submit" class="btn btn-default hb-edit-assignment" data-control="hb-edit-btn" data-target="#updateAssignment" data-id="{{id}}" data-toggle="modal">Edit</button></td>
  <td><button type="submit" class="btn btn-default hb-delete-assignment" data-control="hb-delete-btn" data-target="#deleteAssignment" data-id="{{id}}" data-toggle="modal">Delete</button></td>
</div>
